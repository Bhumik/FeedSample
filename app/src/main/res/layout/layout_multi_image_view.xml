<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.finalhints.mymandirdemo.widgets.FeedMediaView
        android:id="@+id/ivFeedImage1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ivFeedImage4"
        app:layout_constraintEnd_toStartOf="@id/ivFeedImage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#c6c6c6" />

    <com.finalhints.mymandirdemo.widgets.FeedMediaView
        android:id="@+id/ivFeedImage4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ivFeedImage1"
        app:layout_constraintStart_toStartOf="@id/ivFeedImage1"
        app:layout_constraintTop_toBottomOf="@id/ivFeedImage1"
        tools:background="#451245" />


    <com.finalhints.mymandirdemo.widgets.FeedMediaView
        android:id="@+id/ivFeedImage2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@id/ivFeedImage3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivFeedImage1"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#c645c6" />

    <com.finalhints.mymandirdemo.widgets.FeedMediaView
        android:id="@+id/ivFeedImage3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ivFeedImage2"
        app:layout_constraintStart_toStartOf="@id/ivFeedImage2"
        app:layout_constraintTop_toBottomOf="@id/ivFeedImage2"
        tools:background="#451278" />


</androidx.constraintlayout.widget.ConstraintLayout>